@model Commerce.Panel.Models.Controller.Product

<form method="post" asp-controller="Product" asp-action="Insert">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name"/>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price"/>
    </div>

    <div class="form-group">
        <input type="submit" value="Add Product" class="btn btn-outline-success"/>
    </div>
</form>